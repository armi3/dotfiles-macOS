alias ,="sudo"
alias g="git"
alias rr="rm -rf"
alias l="ls -la"
alias ..="cd .."
alias clean-ds="find . -type f -name '*.DS_Store' -ls -delete"
alias reload="$DOTFILES/scripts/reload.sh"

alias tree="tree -A"
alias treed="tree -d"
alias tree1="tree -d -L 1"
alias tree2="tree -d -L 2"
alias treeh="tree -a"
alias treeh1="tree -a -L 1"
alias treeh2="tree -a -L 2"

alias vim=/usr/local/Cellar/vim/8.1.1600/bin/vim
alias vimtutor="vim -n /usr/local/Cellar/vim/8.1.1600/share/vim/vim81/tutor/tutor"

# alias functions="declare -f | grep '^[a-z].* ()' | sed 's/{$//'"
alias paths='echo -e ${PATH//:/\\n}'

# npm
alias ni="npm install"
alias nu="npm uninstall"
alias nup="npm update"
alias nri="rm -r node_modules && npm install"
alias ncd="npm-check -su"